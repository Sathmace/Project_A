<Window x:Class="_3D_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_Editor"
        mc:Ignorable="d"
        Title="3D Editor"
        Width="400" Height="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Foreground="#FF000225"
        WindowStyle="ToolWindow">
    <Grid x:Name="_root">
        <Border BorderThickness="1" BorderBrush="Black" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="_img_mid" Stretch="UniformToFill"/>
        </Border>
        <Button Content="PRESS" IsDefault="True" Height="25" Width="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,190,0,0"/>
    </Grid>
</Window>
